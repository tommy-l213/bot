{
  "name": "rion-trading-bot",
  "version": "1.0.0",
  "description": "自动化 RION 交易机器人 - 持续执行交易直到 APT 余额不足",
  "main": "dist/rion-trading-bot.js",
  "bin": {
    "rion-bot": "dist/rion-trading-bot.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/rion-trading-bot.js",
    "dev": "ts-node rion-trading-bot.ts",
    "package": "pkg dist/rion-trading-bot.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output-path dist/executables",
    "clean": "rimraf dist",
    "install-deps": "npm install",
    "build-all": "npm run clean && npm run build && npm run package"
  },
  "keywords": [
    "aptos",
    "rion",
    "trading",
    "bot",
    "cryptocurrency",
    "automation",
    "defi"
  ],
  "author": "RION Trading Team",
  "license": "MIT",
  "dependencies": {
    "@aptos-labs/ts-sdk": "^4.0.0",
    "aptos": "^1.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "assets": [],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist/executables"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}
